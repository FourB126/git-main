//                                          tel:                    So dien thoai
//                                          dob:                    ngay//thang//nam sinh
//                                          unit:                   Chuc vu
//                                          dayDr / dayNs:          So ngay lam viec cau bac si / y ta
//                                          numOS/ numNS:           So ca phau thuat / so ngay truc dem





//Lop Person
class Person{
private:
    string name,unit;
    int tel, dob,salary;
public:
    Person( string name, int dob, int tel, string unit){
    this -> name = name;
    this -> dob = dob;
    this -> tel = tel;
    this -> unit = unit;
    }
    string getname(){
        return name;
    }
    int getdob(){
        return dob;
    }
    int gettel(){
        return tel;
    }
    string getunit(){
        return unit;
    }

};




//Lop Doctor
class Doctor: public Person{
private:
    int numOS, dayDr;
public:
    Doctor(string name, int dob, int tel, string unit, int dayDr, int numOS ): Person(name,dob,tel,unit){
        this -> dayDr = dayDr;
        this -> numOS = numOS;
        }
        int getdayDr(){
            return dayDr;
        }
        int getnumOS(){
            return numOS;
        }
};





//Lop Nurse
class Nurse : public Person{
private:
    int numNS, dayNs;
public:
    Nurse(string name, int dob, int tel, string unit, int dayNs, int numNS ): Person(name,dob,tel,unit){
        this-> dayNs = dayNs;
        this-> numNS = numNS;
    }
    int getdayNs(){
        return dayNs;
    }
    int getnumNS(){
        return numNS;
    }
};




